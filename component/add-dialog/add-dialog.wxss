@import '../../assets/style/iconfont.wxss';
.mask-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  background-color: rgb(0, 0, 0, 0.5);
  z-index: 1000;
}
.add-vistor-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 80%;
  height: 50%;
  margin: auto;
  background-color: #ffffff;
  z-index: 1000;
  border-radius: 10px;
  overflow: hidden;
  overflow-y: auto;
}
.add-btn-box{
  width: 80%;
  height: 70px;
  position: fixed;
  background-color: #ffffff;
  border-radius: 10px 10px 0 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.add-btn{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin: 20px 0;
}
.btn{
  width: 70%;
  height: 50px;
  background-color: #35c0ff;
  border-radius: 25px;
  text-align: center;
  line-height: 50px;
  color: #ffffff;
}
.vistor-list{
  overflow: hidden;
  overflow-y: auto;
  background-color: #ffffff;
  margin-top: 73px;
  width: 100%;
}
.vistor-list-item{
  background-color: #ffffff;
  margin: 0 1%;
  width: 98%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10px;
  border-bottom: 1px solid #cccccc;
}
.vistor-list-item-l{
  width: 80%;
}
.edit-box{
  width: 18%;
}
.vistor-name-c{
  font-size: 14px;
  font-weight: bold;
}
.vistor-type,.vistor-c{
  font-size: 12px;
}
.edit-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-bianji1{
  font-size: 20px;
}
.edit-text{
  font-size: 16px;
}
.icon-chahao{
  font-size: 30px;
  color: #ffffff;
  position: fixed;
  left: 45%;
  bottom: 10%;
  z-index: 2000;
}
