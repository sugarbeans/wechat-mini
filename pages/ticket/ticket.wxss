page{
  background-color: #f6f9fb;
  color: #325572;
}
.search-box{
  position: fixed;
  top: 0px;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}
.search{
  width: 90%;
  height: 40px;
  background-color: #f9f9f9;
  line-height: 40px;
  border-radius: 20px;
  margin: 0 5%;
}
.search-text{
  margin-left: 10px;
}
.search-icon{
  width: 40px;
}
.icon-sousuo{
  color: #cccccc;
}
.search-text-item{
  font-size: 14px;
  margin-left: 8px;
  color: #cccccc;
}
.search-bar{
  z-index: 9;
  background-color: #fff;
  position: fixed;
  top: 40px;
  left: 0;
  width: 100%;
}
.product-box{
  margin-top: 120px;
}
.product-info-box{
  width: 90%;
  height: 140px;
  margin-left: 5%;
  margin-right: 5%;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  position: relative;
  border-radius: 10px;
  padding-bottom: 10px;
  margin-bottom: 30px;
}
.product-info-box:last-child{
  margin-bottom:10px;
}
.product{
  padding-left: 40%;
  height: 120px;
  width: 100%;
  box-sizing: border-box;
}
.product-img{
  width: 35%;
  height: 120px;
  position: absolute;
  left: 0;
  top: -20px;
  border-radius: 8px;
  overflow: hidden;
}
.product-title{
  font-size: 16px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  height: 40px;
  line-height: 40px;
}
.product-introduce{
  font-size: 12px;
  color: #9e9e9e;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  z-index: -1;
  height: 30px;
  line-height: 30px;
}
.product-price{
  position: relative;
}
.wjx{
  position: absolute;
  top: 0px;
  right: 10px;
  font-size: 22px;
}
.product-price>text:nth-child(1){
  font-size: 14px;
  color: #ff4a26;
  height: 30px;
  line-height: 30px;
}
.product-price>text:nth-child(2){
  font-size: 18px;
  font-weight: bold;
  color: #ff4a26;
  height: 30px;
  line-height: 30px;
}
.product-price>text:nth-child(3){
  font-size: 14px;
  color: #666666;
  height: 30px;
  line-height: 30px;
}
.product-theme{
  width: 100%;
  height: 30px;
  overflow: hidden;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
  padding-left: 10px;
}
.product-theme::-webkit-scrollbar{
  display: none;
}
.product-theme>text{
  display: inline-block;
  height: 28px;
  line-height: 28px;
  padding: 0 10px;
  margin: 0 10px;
  background-color: #ddf4ff;
  color: #35c0ff;
}
