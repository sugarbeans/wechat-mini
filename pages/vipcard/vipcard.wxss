/**index.wxss**/
.main{
  width: 100%;
  height: 100%;
  position: relative;
  color: #325572;
}
.hot-ticket{
  margin-bottom: 80px;
}
.hot-ticket-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  position: relative;
}
.hot-ticke-border{
  position: absolute;
  left: 10px;
  bottom: 2px;
  width: 40px;
  height: 5px;
  z-index: -1;
}
.hot-ticket-title-text{
  font-size: 20px;
  color: #325572;
}
.hot-ticket-title-more{
  font-size: 16px;
  color: #a7a8a9;
}
.ticket-main {
  width: 100%;
  position: relative;
}
.util-bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 200px;
  bottom: 0;
}
.ticket-box{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  box-sizing: border-box;
  border-radius: 6px;
  background-color: #ffffff;
  margin-top: 25px;
  overflow: hidden;
}
.ticket-image-box{
  overflow: hidden;
}
.ticket-image{
  width: 100%;
  height: 200px;
}
.ticket-text-box{
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  box-sizing: border-box;
}
.ticket-text-box>view:first-child{
  font-size: 16px;
  height: 30px;
  line-height: 30px;
}
.ticket-text-box>view:last-child{
  color: #b6b6b6;
  line-height: 24px;
  font-size: 12px;
  margin-bottom: 6px;
  /* white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all; */
}
.footer {
  margin-top: 20px;
  height: 30px;
  line-height: 30px;
  margin-bottom: 5px;
  font-size: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-price{
  position: absolute;
  right: 45px;
}
.product-price>text:nth-child(1){
  font-size: 14px;
  color: #ff4a26;
  height: 30px;
  line-height: 30px;
}
.product-price>text:nth-child(2){
  font-size: 18px;
  font-weight: bold;
  color: #ff4a26;
  height: 30px;
  line-height: 30px;
}
