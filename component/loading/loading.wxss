.mask{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 1000;
}
.mask-bg-img {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 1001;
  width: 320px;
  height: 240px;
  display: flex;
}
.loading-out-box{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
}
.loading-box{
  position: relative;
}
.loading-img{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 2000;
  width: 200px;
  height: 130px;
  text-align: center;
  color: #325572;
}
.loading-img>image{
  width: 80px;
  height: 80px;
}
.loading-text{
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  margin-top: 10px;
}
