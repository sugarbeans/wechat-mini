.container{
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30px;
}
.title{
  margin: 10px 0;
  font-size: 18px;
}
.titleText {
  margin-top: 25px;
  margin-bottom: 10px;
  font-size: 14px;
  color: #020e0f;
  text-align: center;
}
.contentText {
  margin-top: 25px;
  font-size: 14px;
  color: #666;
  text-align: center;
}
.authBtn {
  margin-top: 35px;
  height: 45px;
  font-size: 18px;
  width: 70%;
  background-color: green;
  border-radius: 10px;
  line-height: 45px;
  color: #ffffff;
}
.btn{
  margin-top: 35px;
  font-size: 18px;
  width: 70%;
}
.xcx-image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
}
.xcx-image image{
  width: 100%;
  height: 100%;
}
